<script>
    import gsap from 'gsap';

    // Brand colors in ROYGBV order
    const BRAND_COLORS = [
        '#F03929',  // Red
        '#FF9200',  // Orange
        '#E3F608',  // Yellow
        '#02C779',  // Green
        '#0C4AE5',  // Blue
        '#5522A8',  // Violet
    ];

    const letters = document.querySelectorAll('.logo-letter');
    
    // Each letter gets a cycling pattern through ROYGBV
    // Start each letter at a different point in the color cycle for rhythm
    letters.forEach((letter, letterIndex) => {
        // Each letter starts at a different color in the sequence
        const startColorIndex = letterIndex % BRAND_COLORS.length;
        
        // Set initial color
        const paths = letter.querySelectorAll('.logo-path');
        paths.forEach(path => {
            gsap.set(path, { fill: BRAND_COLORS[startColorIndex] });
        });
    });
    
    // Wait for clip-path animation to start revealing
    gsap.delayedCall(0.3, () => {
        letters.forEach((letter, letterIndex) => {
            const paths = letter.querySelectorAll('.logo-path');
            
            // Stagger the start time for each letter (creates wave effect)
            const startDelay = letterIndex * 0.05; // 50ms stagger between letters (8 letters × 50ms = 350ms)
            
            // Each letter starts at different point in cycle
            const startColorIndex = letterIndex % BRAND_COLORS.length;
            
            // Create timeline for this letter
            const tl = gsap.timeline({ delay: startDelay });
            
            // Cycle through all 6 colors in ROYGBV order
            // Total: 850ms base + 350ms stagger = 1200ms (1.2s)
            for (let i = 0; i < BRAND_COLORS.length; i++) {
                const colorIndex = (startColorIndex + i) % BRAND_COLORS.length;
                paths.forEach(path => {
                    tl.set(path, { fill: BRAND_COLORS[colorIndex] }, i * 0.142); // ~142ms per step (6 × 142 = 852ms)
                });
            }
            
            // Finally snap to white
            paths.forEach(path => {
                tl.set(path, { fill: '#fff' }, BRAND_COLORS.length * 0.142);
            });
            
        });
    });

    
</script> 