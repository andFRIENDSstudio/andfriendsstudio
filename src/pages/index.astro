---
import Logo from '../components/Logo.astro';
import Marquee from '../components/Marquee.astro';
import CustomCursor from '../components/CustomCursor.astro';
import ScrollAnimations from '../components/ScrollAnimations.astro';
import ScrollHint from '../components/ScrollHint.astro';
import '../styles/global.css';

const siteSettings = {
  email: "andfriendsstudio23@gmail.com",
  instagram: "and.friends.studio",
  aboutCopy: "&FRIENDS Studio is the collective creative practice where designers, developers, and artists work and play together on projects that come their way or come to mind."
};
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>&FRIENDS Studio</title>
</head>
<body>
    <div class="hero-state">
        <div class="top-bar">
            <div class="links">
                <a href={`mailto:${siteSettings.email}`}>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M7 17L17 7"></path>
                        <path d="M7 7h10v10"></path>
                    </svg>
                    Email
                </a>
                <a href={`https://instagram.com/${siteSettings.instagram}`} target="_blank">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M7 17L17 7"></path>
                        <path d="M7 7h10v10"></path>
                    </svg>
                    Instagram
                </a>
            </div>
            <div class="about-copy">
                {siteSettings.aboutCopy}
            </div>
        </div>

        <Marquee />

        <button class="view-selected-work" id="viewSelectedWork">
            <span class="bracket-left">[&nbsp;&nbsp;&nbsp;&nbsp;</span>
            <span class="content-group">
                <span>VIEW SELECTED WORK</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                </svg>
            </span>
            <span class="bracket-right">&nbsp;&nbsp;&nbsp;]</span>
        </button>

        <Logo />

        <div class="footer-bar">
            <div>Â© &FRIENDS Studio</div>
            <div>2023-2025</div>
            <div>All Rights Reserved</div>
        </div>
    </div>
    <ScrollHint />
    <CustomCursor />
    <ScrollAnimations />
    
    <script>
        // Scroll to marquee on button click
        const viewButton = document.getElementById('viewSelectedWork');
        if (viewButton) {
            viewButton.addEventListener('click', () => {
                // Calculate where marquee starts entering view
                // This should match the scroll start point in ScrollAnimations
                const viewportHeight = window.innerHeight;
                const scrollTarget = viewportHeight * 0.25; // Adjust this to match your animation start
                
                window.scrollTo({
                    top: scrollTarget,
                    behavior: 'smooth'
                });
            });
        }
    </script>
</body>
</html>